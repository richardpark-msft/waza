{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/spboyer/waza/main/schemas/waza-config.schema.json",
  "title": "Waza Project Configuration",
  "description": "Configuration file for waza skill development projects. Created by 'waza init' and read by 'waza new' and 'waza run'.",
  "type": "object",
  "properties": {
    "defaults": {
      "type": "object",
      "description": "Default values applied to new eval.yaml files generated by 'waza new' and used as fallbacks by 'waza run'.",
      "properties": {
        "engine": {
          "type": "string",
          "description": "Default execution engine for evaluations.",
          "enum": ["copilot-sdk", "mock"],
          "default": "copilot-sdk"
        },
        "model": {
          "type": "string",
          "description": "Default model identifier for evaluations.",
          "examples": ["gpt-4o", "claude-sonnet-4", "gpt-4o-mini"],
          "default": "gpt-4o"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
